{
  "compilerOptions": {
    /* Build info */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    /* Language & runtime */
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "useDefineForClassFields": true,
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    /* React */
    "jsx": "react-jsx",
    /* Paths / aliases (MATCHES vite.config.js) */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@app/*": [
        "src/app/*"
      ]
    },
    /* Types */
    "types": [
      "vite/client"
    ],
    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    /* Linting / correctness */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* SWC-friendly */
    "erasableSyntaxOnly": true
  },
  "include": [
    "src"
  ]
}
